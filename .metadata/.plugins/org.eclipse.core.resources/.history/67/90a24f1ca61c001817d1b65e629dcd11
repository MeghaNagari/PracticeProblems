
public class MergeSort {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int a[]={3,2,1,5,8,4};
		
		mergeSort(a,0,5);
		
		
	}

	private static void mergeSort(int[] a, int l, int h) {
		// TODO Auto-generated method stub
		
		if(l<h)
		{int mid=(l+h)/2;
		
		mergeSort(a,l,mid);
		mergeSort(a, mid+1, h);
		
	}
		
		if(a[l]>a[l+1])
		{
			int t=a[l];
			a[l]=a[l+1];
			a[l+1]=a[l];
		}
		
		
		
		
		
		

}}
