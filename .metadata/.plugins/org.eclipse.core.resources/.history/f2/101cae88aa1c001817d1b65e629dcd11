
public class MergeSort {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int a[] = {1,5,10,12,6,9};

		mergeSort(a, 0, 5);

	}

	private static void mergeSort(int[] a, int l, int h) {
		// TODO Auto-generated method stub
		int midI=l;
		if (l < h) {
			int mid = (l + h) / 2;
 midI=mid;
			mergeSort(a, l, mid);
			mergeSort(a, mid + 1, h);
				
		}

		if (a[l]!=5  && a[l] > a[midI + 1]  ) {

			int t = a[l];
			a[l] = a[midI + 1];
			a[midI + 1] = t;
		}
		for (int i = 0; i <= 5; i++) {
			System.out.print(a[i]+" ");
		}
		System.out.println();
		
		
		if(l==h)

		{
			if(a[l]>a[l+1])
			{
				int t=a[l];
				a[l]=a[l+1];
				a[l+1]=t;
			}
		}
	}
}
