
public class MergeSort {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int a[]={3,2,1,5,8,4};
		
		mergeSort(a,0,5);
		
		
	}

	private static void mergeSort(int[] a, int i, int j) {
		// TODO Auto-generated method stub
		
		
		int mid=(i+j)/2;
		
		if(i==(mid-1))
		{
			if(a[i]>a[j])
			{
				int t=a[i];
				a[i]=a[j];
				a[j]=t;
			}
		}
		
		mergeSort(a,i,mid);
		mergeSort(a, mid+1, j);
		
	}

}
